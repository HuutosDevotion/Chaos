<Window x:Class="Chaos.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Chaos.Client.ViewModels"
        xmlns:conv="clr-namespace:Chaos.Client.Converters"
        xmlns:shared="clr-namespace:Chaos.Shared;assembly=Chaos.Shared"
        xmlns:behaviors="clr-namespace:Chaos.Client.Behaviors"
        mc:Ignorable="d"
        Title="Chaos" Height="700" Width="1100"
        Background="{StaticResource BgMediumBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" GlassFrameThickness="0" ResizeBorderThickness="5" CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        <conv:InverseBoolConverter x:Key="InverseBool" />
        <conv:VolumeToPercentConverter x:Key="VolumeToPercent" />

        <!-- Flat button for use inside a shared container (image preview action bar) -->
        <Style x:Key="ImageActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate DataType="{x:Type vm:CreateChannelModalViewModel}">
            <Border Background="{StaticResource BgDarkBrush}" CornerRadius="8" Width="360"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="24">
                    <TextBlock Text="CREATE CHANNEL" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,20" />
                    <TextBlock Text="CHANNEL NAME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6" />
                    <TextBox Style="{StaticResource DarkTextBox}"
                             Text="{Binding ChannelName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16" />
                    <TextBlock Text="CHANNEL TYPE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <RadioButton Content="Text"
                                     IsChecked="{Binding IsVoiceType, Converter={StaticResource InverseBool}}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,16,0" />
                        <RadioButton Content="Voice"
                                     IsChecked="{Binding IsVoiceType}"
                                     Foreground="{StaticResource TextPrimaryBrush}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource DarkButton}"
                                Command="{Binding Cancel}"
                                Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="Create" Style="{StaticResource AccentButton}"
                                Command="{Binding Confirm}"
                                IsDefault="True" Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RenameChannelModalViewModel}">
            <Border Background="{StaticResource BgDarkBrush}" CornerRadius="8" Width="360"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="24">
                    <TextBlock Text="RENAME CHANNEL" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,20" />
                    <TextBlock Text="CHANNEL NAME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6" />
                    <TextBox Style="{StaticResource DarkTextBox}"
                             Text="{Binding ChannelName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,24" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource DarkButton}"
                                Command="{Binding Cancel}"
                                Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="Rename" Style="{StaticResource AccentButton}"
                                Command="{Binding Confirm}"
                                IsDefault="True" Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DeleteChannelModalViewModel}">
            <Border Background="{StaticResource BgDarkBrush}" CornerRadius="8" Width="360"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="24">
                    <TextBlock Text="DELETE CHANNEL" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource AccentRedBrush}"
                               Margin="0,0,0,12" />
                    <TextBlock Text="{Binding Message}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14" TextWrapping="Wrap"
                               Margin="0,0,0,24" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource DarkButton}"
                                Command="{Binding Cancel}"
                                Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="Delete" Style="{StaticResource DangerButton}"
                                Command="{Binding Confirm}"
                                Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- ── Settings modal ──────────────────────────────────────────────── -->

        <DataTemplate DataType="{x:Type vm:SettingsModalViewModel}">
            <Border Background="{StaticResource BgMediumBrush}" CornerRadius="8"
                    MinWidth="600" MinHeight="400">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Sidebar -->
                    <Border Grid.Column="0" Background="{StaticResource BgDarkBrush}"
                            CornerRadius="8,0,0,8">
                        <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                                Padding="16,14,16,12">
                            <TextBlock Text="Settings" FontSize="15" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" />
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                      Margin="8,8,8,8">
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- DataContext = SettingsCategoryViewModel -->
                                        <StackPanel Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="11" FontWeight="Bold"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       Margin="8,6,8,4" />
                                            <!-- Pass SettingsModalViewModel down via Tag -->
                                            <ItemsControl ItemsSource="{Binding Pages}"
                                                          Tag="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <!-- DataContext = SettingsPageViewModel -->
                                                        <!-- Command="{Binding Select}" calls select(this) in the page VM -->
                                                        <Button Content="{Binding Name}"
                                                                HorizontalContentAlignment="Left"
                                                                Padding="8,6" Margin="0,1"
                                                                Cursor="Hand"
                                                                Command="{Binding Select}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent" />
                                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                                                    <Setter Property="BorderThickness" Value="0" />
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border x:Name="Bd" CornerRadius="4"
                                                                                        Padding="{TemplateBinding Padding}"
                                                                                        Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter />
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                        <Setter TargetName="Bd" Property="Background" Value="#404249" />
                                                                                    </DataTrigger>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="Bd" Property="Background" Value="#35373C" />
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Content area -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Sticky header: page name + close button -->
                        <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                                Padding="24,14,12,12">
                            <Grid>
                                <TextBlock Text="{Binding SelectedPage.Name}"
                                           FontSize="18" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />
                                <Button Content="✕" Style="{StaticResource DarkButton}"
                                        Command="{Binding Close}"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Padding="10,6" FontSize="13" />
                            </Grid>
                        </Border>

                        <!-- Scrollable page content -->
                        <ContentControl Grid.Row="1"
                                        Content="{Binding SelectedPage}"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch" />
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Shared message item template — used by both the main chat list and the Appearance preview -->

        <DataTemplate DataType="{x:Type vm:AppearanceSettingsViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24,32,24">
                    <TextBlock Text="Appearance" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,16" />

                    <!-- Live preview -->
                    <Border Background="{StaticResource BgDarkBrush}"
                            BorderBrush="#222326" BorderThickness="1"
                            CornerRadius="6" Margin="0,0,0,24"
                            ClipToBounds="True" Height="160">
                        <RichTextBox conv:RichTextBoxHelper.Document="{Binding PreviewDocument}"
                                     FontSize="{Binding Settings.FontSize}"
                                     IsReadOnly="True"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0"
                                     IsHitTestVisible="False"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <RichTextBox.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding Settings.UiScale}"
                                                ScaleY="{Binding Settings.UiScale}" />
                            </RichTextBox.LayoutTransform>
                        </RichTextBox>
                    </Border>

                    <TextBlock Text="FONT SIZE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,20">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.FontSize, StringFormat='{}{0:0}px'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="10" Maximum="24"
                                Value="{Binding Settings.FontSize, Mode=TwoWay}"
                                SmallChange="1" LargeChange="2"
                                IsSnapToTickEnabled="True" TickFrequency="1" />
                    </DockPanel>

                    <TextBlock Text="MESSAGE SPACING" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,20">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.MessageSpacing, StringFormat='{}{0:0}'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0" Maximum="16"
                                Value="{Binding Settings.MessageSpacing, Mode=TwoWay}"
                                SmallChange="1" LargeChange="2"
                                IsSnapToTickEnabled="True" TickFrequency="1" />
                    </DockPanel>

                    <TextBlock Text="UI SCALE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.UiScale, StringFormat='{}{0:P0}'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0.75" Maximum="1.5"
                                Value="{Binding Settings.UiScale, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1"
                                IsSnapToTickEnabled="True" TickFrequency="0.05" />
                    </DockPanel>

                    <Border BorderBrush="#222326" BorderThickness="0,1,0,0" Margin="0,0,0,24" />

                    <DockPanel Margin="0,0,0,4">
                        <ToggleButton DockPanel.Dock="Right"
                                      IsChecked="{Binding Settings.GroupMessages, Mode=TwoWay}"
                                      Style="{StaticResource DarkToggleSwitch}" />
                        <StackPanel>
                            <TextBlock Text="Group Messages"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="14" FontWeight="SemiBold" />
                            <TextBlock Text="Consecutive messages from the same user are grouped together"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12" TextWrapping="Wrap" Margin="0,2,16,0" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:VoiceSettingsViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24,32,24">
                    <TextBlock Text="Voice" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,24" />

                    <TextBlock Text="MICROPHONE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <ComboBox ItemsSource="{Binding InputDevices}"
                              SelectedItem="{Binding Settings.InputDevice, Mode=TwoWay}"
                              Style="{StaticResource DarkComboBox}"
                              Margin="0,0,0,8" />

                    <Button Content="{Binding MicTestButtonText}"
                            Command="{Binding TestMicCommand}"
                            Style="{StaticResource DarkButton}"
                            HorizontalAlignment="Left"
                            Padding="12,6" Margin="0,0,0,8" />
                    <Grid Margin="0,0,0,16"
                          Visibility="{Binding IsMicTesting, Converter={StaticResource BoolToVis}}">
                        <ProgressBar Height="6" Minimum="0" Maximum="1"
                                     Value="{Binding MicTestLevel, Mode=OneWay}"
                                     Background="#3A3C42"
                                     Foreground="{StaticResource AccentGreenBrush}"
                                     BorderThickness="0" />
                    </Grid>

                    <TextBlock Text="INPUT VOLUME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.InputVolume, Converter={StaticResource VolumeToPercent}}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0" Maximum="1"
                                Value="{Binding Settings.InputVolume, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1" />
                    </DockPanel>

                    <Border BorderBrush="#222326" BorderThickness="0,1,0,0" Margin="0,0,0,24" />

                    <TextBlock Text="SPEAKER" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding Settings.OutputDevice, Mode=TwoWay}"
                              Style="{StaticResource DarkComboBox}"
                              Margin="0,0,0,16" />

                    <TextBlock Text="OUTPUT VOLUME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.OutputVolume, Converter={StaticResource VolumeToPercent}}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0" Maximum="1"
                                Value="{Binding Settings.OutputVolume, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1" />
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <Border Grid.Row="0" Background="{StaticResource BgDarkestBrush}">
            <Grid>
                <!-- Centered icon + app name -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                            IsHitTestVisible="False">
                    <Image Source="pack://application:,,,/Assets/app.ico" Width="16" Height="16" Margin="0,0,6,0" />
                    <TextBlock Text="Chaos" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Window controls — all icons are drawn shapes so size and alignment are always consistent -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Minimize: horizontal line, same stroke as maximize square -->
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Width="40" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <Line X1="0" Y1="0" X2="11" Y2="0"
                                          Stroke="{StaticResource TextSecondaryBrush}" StrokeThickness="1.5"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource BgLightBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Maximize: square outline -->
                    <Button x:Name="MaximizeButton" Click="MaximizeButton_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Width="40" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <Border x:Name="MaximizeIcon" Width="11" Height="11"
                                            BorderBrush="{StaticResource TextSecondaryBrush}"
                                            BorderThickness="1.5"
                                            HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource BgLightBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Close: X path, same stroke as maximize square -->
                    <Button x:Name="CloseButton" Click="CloseButton_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Width="40" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <Path x:Name="CloseIcon"
                                          Data="M0.75,0.75 L10.25,10.25 M10.25,0.75 L0.75,10.25"
                                          Stroke="{StaticResource TextSecondaryBrush}" StrokeThickness="1.5"
                                          StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentRedBrush}" />
                                        <Setter TargetName="CloseIcon" Property="Stroke" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">

        <!-- Login Overlay -->
        <Grid Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVis}}"
              Panel.ZIndex="10"
              Background="{StaticResource BgDarkBrush}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340"
                        KeyDown="LoginPanel_KeyDown"
                        FocusManager.FocusedElement="{Binding ElementName=UsernameInput}">
                <TextBlock Text="CHAOS"
                           FontSize="36" FontWeight="Bold"
                           Foreground="{StaticResource AccentBlueBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />
                <TextBlock Text="Self-hosted voice &amp; text chat"
                           FontSize="13"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" />

                <TextBlock Text="SERVER ADDRESS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6" />
                <TextBox Style="{StaticResource DarkTextBox}"
                         Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16" />

                <TextBlock Text="USERNAME" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6" />
                <TextBox x:Name="UsernameInput"
                         Style="{StaticResource DarkTextBox}"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20" />

                <Button Content="Connect"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding ConnectCommand}"
                        IsDefault="True"
                        FontSize="15" FontWeight="SemiBold"
                        Padding="0,10"
                        Margin="0,0,0,12" />

                <TextBlock Text="{Binding ConnectionStatus}"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           FontSize="12" />
            </StackPanel>
        </Grid>

        <!-- Modal Overlay -->
        <Grid Panel.ZIndex="20"
              Visibility="{Binding IsAnyModalOpen, Converter={StaticResource BoolToVis}}"
              Background="#A0000000"
              MouseLeftButtonDown="ModalBackdrop_MouseLeftButtonDown"
              PreviewKeyDown="ModalOverlay_PreviewKeyDown">
            <ContentControl x:Name="ModalContentControl"
                            Content="{Binding ActiveModal}"
                            Visibility="{Binding IsImagePreviewOpen, Converter={StaticResource InverseBoolToVis}}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Margin="60"
                            MouseLeftButtonDown="Modal_MouseLeftButtonDown" />

            <!-- Image preview overlay (zoom + pan) -->
            <Grid x:Name="ImagePreviewPanel"
                  Visibility="{Binding IsImagePreviewOpen, Converter={StaticResource BoolToVis}}"
                  MouseLeftButtonDown="ImagePreview_MouseLeftButtonDown"
                  MouseMove="ImagePreview_MouseMove"
                  MouseLeftButtonUp="ImagePreview_MouseLeftButtonUp">
                <ScrollViewer x:Name="ImagePreviewScroll"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden"
                              Focusable="False">
                    <Image x:Name="ImagePreviewImg"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Stretch="Uniform" />
                </ScrollViewer>
                <!-- Top-right button row -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="16" Panel.ZIndex="10">

                    <!-- Save + Copy grouped in one box (hidden when zoomed) -->
                    <Border x:Name="ImageActionButtons"
                            Background="{StaticResource BgLightBrush}"
                            CornerRadius="4"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource ImageActionButton}"
                                    Width="36" Click="ImagePreviewSave_Click"
                                    behaviors:TooltipHelper.CenterOnElement="True"
                                    ToolTipService.InitialShowDelay="0">
                                <Button.ToolTip>
                                    <ToolTip Content="Save Image" />
                                </Button.ToolTip>
                                <!-- Download icon: arrow shaft + V-head + bar -->
                                <Viewbox Width="14" Height="14">
                                    <Canvas Width="14" Height="14">
                                        <Path Data="M7,1 L7,8 M3,5 L7,10 L11,5 M1,12 L13,12"
                                              Stroke="{StaticResource TextPrimaryBrush}"
                                              StrokeThickness="1.5"
                                              StrokeLineJoin="Round"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                            <Rectangle Width="1" Fill="#30FFFFFF" Margin="0,6" />
                            <Button Style="{StaticResource ImageActionButton}"
                                    Width="36" Click="ImagePreviewCopy_Click"
                                    behaviors:TooltipHelper.CenterOnElement="True"
                                    ToolTipService.InitialShowDelay="0">
                                <Button.ToolTip>
                                    <ToolTip Content="Copy" />
                                </Button.ToolTip>
                                <TextBlock Text="⧉" />
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Close (always visible) -->
                    <Button x:Name="ImagePreviewCloseBtn"
                            Content="✕"
                            Style="{StaticResource DarkButton}"
                            Click="ImagePreviewClose_Click"
                            Padding="10,6"
                            FontSize="16"
                            behaviors:TooltipHelper.CenterOnElement="True"
                            ToolTipService.InitialShowDelay="0">
                        <Button.ToolTip>
                            <ToolTip Content="Close" />
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Main Layout (visible when connected) -->
        <Grid Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="{Binding Settings.UiScale}" ScaleY="{Binding Settings.UiScale}" />
            </Grid.LayoutTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="160" MaxWidth="480" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" MinWidth="300" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="200" MinWidth="120" MaxWidth="360" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Grid Grid.Column="0" Background="{StaticResource BgDarkBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="52" />
                </Grid.RowDefinitions>

                <!-- Server Name Header -->
                <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                        Padding="16,0">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="+"
                                Style="{StaticResource DarkButton}"
                                Command="{Binding CreateChannelCommand}"
                                FontSize="18" FontWeight="Bold"
                                Padding="8,0" VerticalAlignment="Center"
                                behaviors:TooltipHelper.CenterOnElement="True"
                                ToolTipService.InitialShowDelay="0">
                            <Button.ToolTip>
                                <ToolTip Content="Create Channel" />
                            </Button.ToolTip>
                        </Button>
                        <TextBlock Text="Chaos Server" FontSize="15" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" />
                    </DockPanel>
                </Border>

                <!-- Channel List with voice members inline -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Channels}" Margin="8,12,8,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="3,0,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActiveVoice}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentGreenBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                <StackPanel>
                                    <!-- Channel Button -->
                                    <Button HorizontalContentAlignment="Left"
                                            Padding="8,6" Margin="0,1"
                                            Cursor="Hand"
                                            Command="{Binding DataContext.ChannelClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Rename Channel"
                                                          Command="{Binding PlacementTarget.Tag.RenameChannelCommand,
                                                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                     RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                <MenuItem Header="Delete Channel"
                                                          Command="{Binding PlacementTarget.Tag.DeleteChannelCommand,
                                                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                     RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                                                    CornerRadius="4" Background="{TemplateBinding Background}">
                                                                <ContentPresenter />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#404249" />
                                                                </DataTrigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#35373C" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="16" Margin="0,0,6,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActiveVoice}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActiveVoice}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <!-- Voice members shown under voice channels -->
                                    <ItemsControl ItemsSource="{Binding VoiceMembers}"
                                                  Margin="28,0,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                                    <StackPanel.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem StaysOpenOnClick="True">
                                                                <MenuItem.Template>
                                                                    <ControlTemplate TargetType="MenuItem">
                                                                        <Border Background="{StaticResource BgDarkBrush}" Padding="10,8">
                                                                            <StackPanel>
                                                                                <TextBlock Text="VOLUME"
                                                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                                                           FontSize="11" FontWeight="Bold"
                                                                                           Margin="0,0,0,6" />
                                                                                <DockPanel>
                                                                                    <TextBlock DockPanel.Dock="Right"
                                                                                               Text="{Binding PlacementTarget.DataContext.Volume,
                                                                                                              RelativeSource={RelativeSource AncestorType=ContextMenu},
                                                                                                              Converter={StaticResource VolumeToPercent}}"
                                                                                               Foreground="{StaticResource TextMutedBrush}"
                                                                                               FontSize="11" VerticalAlignment="Center"
                                                                                               MinWidth="34" TextAlignment="Right"
                                                                                               Margin="8,0,0,0" />
                                                                                    <Slider Minimum="0" Maximum="2"
                                                                                            Value="{Binding PlacementTarget.DataContext.Volume,
                                                                                                            RelativeSource={RelativeSource AncestorType=ContextMenu},
                                                                                                            Mode=TwoWay}"
                                                                                            Width="130"
                                                                                            SmallChange="0.05" LargeChange="0.2"
                                                                                            VerticalAlignment="Center" />
                                                                                </DockPanel>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </MenuItem.Template>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </StackPanel.ContextMenu>

                                                    <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0">
                                                        <Ellipse.Style>
                                                            <Style TargetType="Ellipse">
                                                                <Setter Property="Fill" Value="{StaticResource TextMutedBrush}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSpeaking}" Value="True">
                                                                        <Setter Property="Fill" Value="{StaticResource AccentGreenBrush}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                    <TextBlock Text="{Binding Username}" FontSize="13" VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSpeaking}" Value="True">
                                                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Voice Connection Bar (shown when in voice) -->
                <Border Grid.Row="2"
                        Visibility="{Binding IsInVoice, Converter={StaticResource BoolToVis}}"
                        Background="#1A1E1B" BorderBrush="#222326" BorderThickness="0,1,0,0"
                        Padding="12,8">
                    <StackPanel>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Content="X"
                                    Style="{StaticResource DarkButton}"
                                    Command="{Binding DisconnectVoiceCommand}"
                                    FontSize="11" Padding="6,2" FontWeight="Bold"
                                    VerticalAlignment="Center" />
                            <StackPanel>
                                <TextBlock Text="{Binding VoiceChannelName}"
                                           Foreground="{StaticResource AccentGreenBrush}"
                                           FontSize="12" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding VoiceStatus}"
                                           Foreground="{StaticResource AccentRedBrush}"
                                           FontSize="10" TextWrapping="Wrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VoiceStatus}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>
                        <ProgressBar Height="3" Margin="0,6,0,0"
                                     Minimum="0" Maximum="100"
                                     Value="{Binding MicLevel, Mode=OneWay}"
                                     Background="#3A3C42" Foreground="{StaticResource AccentGreenBrush}"
                                     BorderThickness="0" />
                    </StackPanel>
                </Border>

                <!-- User Panel (bottom) -->
                <Border Grid.Row="3" Background="{StaticResource BgDarkestBrush}"
                        Padding="8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Username}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="13" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding ConnectionStatus}"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="10" />
                        </StackPanel>

                        <Button Grid.Column="1" Content="{Binding MuteButtonText}"
                                Style="{StaticResource DarkButton}"
                                Command="{Binding ToggleMuteCommand}"
                                FontSize="11" Padding="4,4"
                                Margin="4,0" VerticalAlignment="Center"
                                Tag="{Binding MuteTooltipText}"
                                behaviors:TooltipHelper.CenterOnElement="True"
                                ToolTipService.InitialShowDelay="0">
                            <Button.ToolTip>
                                <ToolTip />
                            </Button.ToolTip>
                        </Button>

                        <Button Grid.Column="2" Content="{Binding DeafenButtonText}"
                                Style="{StaticResource DarkButton}"
                                Command="{Binding ToggleDeafenCommand}"
                                FontSize="11" Padding="4,4"
                                VerticalAlignment="Center"
                                Tag="{Binding DeafenTooltipText}"
                                behaviors:TooltipHelper.CenterOnElement="True"
                                ToolTipService.InitialShowDelay="0">
                            <Button.ToolTip>
                                <ToolTip />
                            </Button.ToolTip>
                        </Button>

                        <Button Grid.Column="3" Content="⚙"
                                Style="{StaticResource DarkButton}"
                                Command="{Binding OpenSettingsCommand}"
                                FontSize="13" Padding="6,4"
                                Margin="4,0,0,0" VerticalAlignment="Center"
                                behaviors:TooltipHelper.CenterOnElement="True"
                                ToolTipService.InitialShowDelay="0">
                            <Button.ToolTip>
                                <ToolTip Content="Settings" />
                            </Button.ToolTip>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- Resize handle between left sidebar and chat -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="#222326"
                          ShowsPreview="False" />

            <!-- Resize handle between chat and right sidebar -->
            <GridSplitter Grid.Column="3"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="#222326"
                          ShowsPreview="False" />

            <!-- Right Sidebar: Connected Users -->
            <Grid Grid.Column="4" Background="{StaticResource BgDarkBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                        Padding="12,12,12,8">
                    <TextBlock Text="{Binding ConnectedUsersHeader}"
                               FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextMutedBrush}" />
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="8,8,8,8">
                    <ItemsControl ItemsSource="{Binding ConnectedUsers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4,3">
                                    <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreenBrush}"
                                             VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBlock Text="{Binding}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="13"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Right: Text Chat Area (always shows selected text channel) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Channel Header -->
                <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}"
                        BorderBrush="#222326" BorderThickness="0,0,0,1"
                        Padding="16,0">
                    <TextBlock Text="{Binding SelectedChannelName}"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Messages -->
                <Grid Grid.Row="1" Background="{StaticResource BgMediumBrush}">
                    <RichTextBox x:Name="MessageList"
                                 Visibility="{Binding HasTextChannel, Converter={StaticResource BoolToVis}}"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 FontSize="{Binding Settings.FontSize}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 IsDocumentEnabled="True" />

                    <!-- No Channel Selected -->
                    <TextBlock Text="Select a text channel to start chatting"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding HasTextChannel, Converter={StaticResource InverseBoolToVis}}" />
                </Grid>

                <!-- Message Input -->
                <Border Grid.Row="2" Padding="16,8,16,16"
                        Background="{StaticResource BgMediumBrush}"
                        Visibility="{Binding HasTextChannel, Converter={StaticResource BoolToVis}}"
                        AllowDrop="True"
                        PreviewDragOver="ChatInput_DragOver"
                        PreviewDrop="ChatInput_Drop">
                    <StackPanel>
                        <!-- Pending image thumbnail preview -->
                        <Border Background="{StaticResource BgInputBrush}"
                                CornerRadius="8" Padding="8"
                                Margin="0,0,0,6"
                                Visibility="{Binding HasPendingImage, Converter={StaticResource BoolToVis}}">
                            <DockPanel>
                                <Button DockPanel.Dock="Right"
                                        Content="✕"
                                        Style="{StaticResource DarkButton}"
                                        Command="{Binding ClearPendingImageCommand}"
                                        Padding="6,4" Margin="8,0,0,0"
                                        VerticalAlignment="Top" />
                                <Image Source="{Binding PendingImagePreview}"
                                       MaxWidth="300" MaxHeight="120"
                                       Stretch="Uniform" HorizontalAlignment="Left" />
                            </DockPanel>
                        </Border>

                        <!-- Slash Command Autocomplete -->
                        <Border CornerRadius="8" Margin="0,0,0,4"
                                Background="{StaticResource BgDarkBrush}"
                                BorderBrush="#40FFFFFF" BorderThickness="1"
                                Visibility="{Binding ShowSlashSuggestions, Converter={StaticResource BoolToVis}}">
                            <ListBox x:Name="SuggestionList"
                                     ItemsSource="{Binding SlashSuggestions}"
                                     SelectedIndex="{Binding SelectedSuggestionIndex, Mode=TwoWay}"
                                     Focusable="False"
                                     MaxHeight="200"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     PreviewMouseLeftButtonDown="SuggestionList_PreviewMouseLeftButtonDown">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Focusable" Value="False" />
                                        <Setter Property="Padding" Value="12,6" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                        <ContentPresenter />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#35373C" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#4752C4" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Foreground="{StaticResource AccentBlueBrush}"
                                                       FontWeight="SemiBold" FontSize="14"
                                                       VerticalAlignment="Center">
                                                <Run Text="/" /><Run Text="{Binding Name, Mode=OneWay}" />
                                            </TextBlock>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       FontSize="13" Margin="12,0,0,0"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Usage}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" Margin="12,0,0,0"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Text input row -->
                        <Border Background="{StaticResource BgInputBrush}"
                                CornerRadius="8">
                            <StackPanel>
                                <!-- Formatting toolbar — visible only while the input area has keyboard focus.
                                     Toolbar buttons have Focusable=False so clicks don't steal focus from
                                     the RichTextBox; IsKeyboardFocusWithin therefore stays True. -->
                                <Border Padding="6,4"
                                        BorderBrush="#30FFFFFF" BorderThickness="0,0,0,1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Value="True"
                                                    Binding="{Binding IsKeyboardFocusWithin,
                                                              RelativeSource={RelativeSource AncestorType=StackPanel}}">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <WrapPanel Orientation="Horizontal">

                                        <!-- ── Inline formatting ── -->
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.ToggleBold}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Bold (Ctrl+B)">
                                            <TextBlock Text="B" FontWeight="Bold" FontSize="13" />
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.ToggleItalic}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Italic (Ctrl+I)">
                                            <TextBlock Text="I" FontStyle="Italic" FontSize="13" />
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.ToggleUnderline}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Underline (Ctrl+U)">
                                            <TextBlock Text="U" FontSize="13" TextDecorations="Underline" />
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Click="Strikethrough_Click"
                                                ToolTip="Strikethrough">
                                            <TextBlock Text="S" FontSize="13" TextDecorations="Strikethrough" />
                                        </Button>

                                        <Rectangle Width="1" Fill="#40FFFFFF" Margin="4,4" />

                                        <!-- ── Alignment ── -->
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.AlignLeft}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Align Left">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Path Data="M1,2 L13,2 M1,6 L9,6 M1,10 L13,10 M1,14 L7,14"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.AlignCenter}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Align Center">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Path Data="M1,2 L13,2 M3,6 L11,6 M1,10 L13,10 M4,14 L10,14"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.AlignRight}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Align Right">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Path Data="M1,2 L13,2 M5,6 L13,6 M1,10 L13,10 M7,14 L13,14"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.AlignJustify}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Justify">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Path Data="M1,2 L13,2 M1,6 L13,6 M1,10 L13,10 M1,14 L13,14"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>

                                        <Rectangle Width="1" Fill="#40FFFFFF" Margin="4,4" />

                                        <!-- ── Lists ── -->
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.ToggleBullets}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Bullet List">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Ellipse Canvas.Left="1" Canvas.Top="2" Width="2.5" Height="2.5"
                                                             Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                    <Path Data="M6,3 L13,3"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                    <Ellipse Canvas.Left="1" Canvas.Top="6.5" Width="2.5" Height="2.5"
                                                             Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                    <Path Data="M6,7.75 L13,7.75"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                    <Ellipse Canvas.Left="1" Canvas.Top="11" Width="2.5" Height="2.5"
                                                             Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                    <Path Data="M6,12.25 L13,12.25"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.ToggleNumbering}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Numbered List">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <!-- Three short vertical tick marks + horizontal lines -->
                                                    <Path Data="M1,1 L1,4 M2.5,4 L1,4"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                    <Path Data="M6,3 L13,3"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                    <Path Data="M1,6 Q2.5,5 2.5,6.5 Q2.5,8 1,8 L3,8"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" />
                                                    <Path Data="M6,7.75 L13,7.75"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                    <Path Data="M1,10.5 Q2.5,9.5 2.5,11 L1,13 L3,13"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" />
                                                    <Path Data="M6,12.25 L13,12.25"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>

                                        <Rectangle Width="1" Fill="#40FFFFFF" Margin="4,4" />

                                        <!-- ── Indent ── -->
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.DecreaseIndentation}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Decrease Indent">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Path Data="M5,4 L2,7 L5,10 M2,7 L13,7 M5,1 L13,1 M5,13 L13,13"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Command="{x:Static EditingCommands.IncreaseIndentation}"
                                                CommandTarget="{Binding ElementName=MessageInput}"
                                                ToolTip="Increase Indent">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <Path Data="M9,4 L12,7 L9,10 M12,7 L1,7 M1,1 L9,1 M1,13 L9,13"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>

                                        <Rectangle Width="1" Fill="#40FFFFFF" Margin="4,4" />

                                        <!-- ── Hyperlink ── -->
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Click="InsertHyperlink_Click"
                                                ToolTip="Insert Hyperlink">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <!-- Chain link: two rounded rectangles overlapping -->
                                                    <Path Data="M5,8 A3,3,0,0,1,5,5 L8,5 A3,3,0,0,1,8,8"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Fill="Transparent" />
                                                    <Path Data="M9,6 A3,3,0,0,1,9,9 L6,9 A3,3,0,0,1,6,6"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Fill="Transparent" />
                                                    <Path Data="M2,5 L5,5 M9,9 L12,9"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>

                                        <!-- ── Image ── -->
                                        <Button Style="{StaticResource ToolbarButton}"
                                                Click="PickImage_Click"
                                                ToolTip="Insert Image">
                                            <Viewbox Width="14" Height="14">
                                                <Canvas Width="14" Height="14">
                                                    <!-- Rectangle frame -->
                                                    <Path Data="M1,2 L13,2 L13,12 L1,12 Z"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeLineJoin="Round" Fill="Transparent" />
                                                    <!-- Mountain / landscape -->
                                                    <Path Data="M1,10 L4,6 L7,9 L9,7 L13,12"
                                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                          StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" />
                                                    <!-- Sun dot -->
                                                    <Ellipse Canvas.Left="9.5" Canvas.Top="3.5" Width="2" Height="2"
                                                             Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>

                                    </WrapPanel>
                                </Border>

                                <!-- Rich text input -->
                                <RichTextBox x:Name="MessageInput"
                                             Background="Transparent"
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             CaretBrush="{StaticResource TextPrimaryBrush}"
                                             SelectionBrush="{StaticResource AccentBlueBrush}"
                                             BorderThickness="0"
                                             Padding="8,6"
                                             FontSize="14"
                                             AcceptsReturn="True"
                                             MaxHeight="120"
                                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                                             PreviewKeyDown="MessageInput_PreviewKeyDown" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        </Grid> <!-- /Content -->
    </Grid>
</Window>

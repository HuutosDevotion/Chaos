<Window x:Class="Chaos.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Chaos.Client.ViewModels"
        xmlns:conv="clr-namespace:Chaos.Client.Converters"
        xmlns:shared="clr-namespace:Chaos.Shared;assembly=Chaos.Shared"
        mc:Ignorable="d"
        Title="Chaos" Height="700" Width="1100"
        Background="{StaticResource BgMediumBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" GlassFrameThickness="0" ResizeBorderThickness="5" CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        <conv:InverseBoolConverter x:Key="InverseBool" />
        <conv:VolumeToPercentConverter x:Key="VolumeToPercent" />

        <DataTemplate DataType="{x:Type vm:CreateChannelModalViewModel}">
            <Border Background="{StaticResource BgDarkBrush}" CornerRadius="8" Width="360"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="24">
                    <TextBlock Text="CREATE CHANNEL" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,20" />
                    <TextBlock Text="CHANNEL NAME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6" />
                    <TextBox Style="{StaticResource DarkTextBox}"
                             Text="{Binding ChannelName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16" />
                    <TextBlock Text="CHANNEL TYPE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <RadioButton Content="Text"
                                     IsChecked="{Binding IsVoiceType, Converter={StaticResource InverseBool}}"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,16,0" />
                        <RadioButton Content="Voice"
                                     IsChecked="{Binding IsVoiceType}"
                                     Foreground="{StaticResource TextPrimaryBrush}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource DarkButton}"
                                Command="{Binding Cancel}"
                                Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="Create" Style="{StaticResource AccentButton}"
                                Command="{Binding Confirm}"
                                IsDefault="True" Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RenameChannelModalViewModel}">
            <Border Background="{StaticResource BgDarkBrush}" CornerRadius="8" Width="360"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="24">
                    <TextBlock Text="RENAME CHANNEL" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,20" />
                    <TextBlock Text="CHANNEL NAME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6" />
                    <TextBox Style="{StaticResource DarkTextBox}"
                             Text="{Binding ChannelName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,24" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource DarkButton}"
                                Command="{Binding Cancel}"
                                Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="Rename" Style="{StaticResource AccentButton}"
                                Command="{Binding Confirm}"
                                IsDefault="True" Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DeleteChannelModalViewModel}">
            <Border Background="{StaticResource BgDarkBrush}" CornerRadius="8" Width="360"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="24">
                    <TextBlock Text="DELETE CHANNEL" FontSize="13" FontWeight="Bold"
                               Foreground="{StaticResource AccentRedBrush}"
                               Margin="0,0,0,12" />
                    <TextBlock Text="{Binding Message}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14" TextWrapping="Wrap"
                               Margin="0,0,0,24" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource DarkButton}"
                                Command="{Binding Cancel}"
                                Padding="16,8" Margin="0,0,8,0" />
                        <Button Content="Delete" Style="{StaticResource DangerButton}"
                                Command="{Binding Confirm}"
                                Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- ── Settings modal ──────────────────────────────────────────────── -->

        <DataTemplate DataType="{x:Type vm:SettingsModalViewModel}">
            <Border Background="{StaticResource BgMediumBrush}" CornerRadius="8"
                    MinWidth="600" MinHeight="400">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Sidebar -->
                    <Border Grid.Column="0" Background="{StaticResource BgDarkBrush}"
                            CornerRadius="8,0,0,8">
                        <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                                Padding="16,14,16,12">
                            <TextBlock Text="Settings" FontSize="15" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" />
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                      Margin="8,8,8,8">
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- DataContext = SettingsCategoryViewModel -->
                                        <StackPanel Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="11" FontWeight="Bold"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       Margin="8,6,8,4" />
                                            <!-- Pass SettingsModalViewModel down via Tag -->
                                            <ItemsControl ItemsSource="{Binding Pages}"
                                                          Tag="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <!-- DataContext = SettingsPageViewModel -->
                                                        <!-- Command="{Binding Select}" calls select(this) in the page VM -->
                                                        <Button Content="{Binding Name}"
                                                                HorizontalContentAlignment="Left"
                                                                Padding="8,6" Margin="0,1"
                                                                Cursor="Hand"
                                                                Command="{Binding Select}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent" />
                                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                                                    <Setter Property="BorderThickness" Value="0" />
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border x:Name="Bd" CornerRadius="4"
                                                                                        Padding="{TemplateBinding Padding}"
                                                                                        Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter />
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                        <Setter TargetName="Bd" Property="Background" Value="#404249" />
                                                                                    </DataTrigger>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="Bd" Property="Background" Value="#35373C" />
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Content area -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Sticky header: page name + close button -->
                        <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                                Padding="24,14,12,12">
                            <Grid>
                                <TextBlock Text="{Binding SelectedPage.Name}"
                                           FontSize="18" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />
                                <Button Content="✕" Style="{StaticResource DarkButton}"
                                        Command="{Binding Close}"
                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Padding="10,6" FontSize="13" />
                            </Grid>
                        </Border>

                        <!-- Scrollable page content -->
                        <ContentControl Grid.Row="1"
                                        Content="{Binding SelectedPage}"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch" />
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Shared message item template — used by both the main chat list and the Appearance preview -->
        <DataTemplate x:Key="MessageItemTemplate">
            <StackPanel Margin="0,2">
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding ShowHeader, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding Author}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontWeight="SemiBold"
                               FontSize="{Binding DataContext.Settings.HeaderFontSize, RelativeSource={RelativeSource AncestorType=ListBox}}" />
                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="11" Margin="8,2,0,0"
                               VerticalAlignment="Center" />
                </StackPanel>
                <TextBlock Text="{Binding Content}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,2,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Content}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Image Source="{Binding ImageUrl, TargetNullValue={x:Null}}"
                       MaxWidth="400" MaxHeight="300"
                       Stretch="Uniform" HorizontalAlignment="Left"
                       Margin="0,4,0,0"
                       Visibility="{Binding HasImage, Converter={StaticResource BoolToVis}}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AppearanceSettingsViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24,32,24">
                    <TextBlock Text="Appearance" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,16" />

                    <!-- Live preview -->
                    <Border Background="{StaticResource BgDarkBrush}"
                            BorderBrush="#222326" BorderThickness="1"
                            CornerRadius="6" Margin="0,0,0,24"
                            ClipToBounds="True" Height="160">
                        <ListBox ItemsSource="{Binding SampleMessages}"
                                 ItemTemplate="{StaticResource MessageItemTemplate}"
                                 FontSize="{Binding Settings.FontSize}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsHitTestVisible="False"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <ListBox.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding Settings.UiScale}"
                                                ScaleY="{Binding Settings.UiScale}" />
                            </ListBox.LayoutTransform>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="{Binding Padding}" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter Margin="{TemplateBinding Padding}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>

                    <TextBlock Text="FONT SIZE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,20">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.FontSize, StringFormat='{}{0:0}px'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="10" Maximum="24"
                                Value="{Binding Settings.FontSize, Mode=TwoWay}"
                                SmallChange="1" LargeChange="2"
                                IsSnapToTickEnabled="True" TickFrequency="1" />
                    </DockPanel>

                    <TextBlock Text="MESSAGE SPACING" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,20">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.MessageSpacing, StringFormat='{}{0:0}'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0" Maximum="16"
                                Value="{Binding Settings.MessageSpacing, Mode=TwoWay}"
                                SmallChange="1" LargeChange="2"
                                IsSnapToTickEnabled="True" TickFrequency="1" />
                    </DockPanel>

                    <TextBlock Text="UI SCALE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.UiScale, StringFormat='{}{0:P0}'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0.75" Maximum="1.5"
                                Value="{Binding Settings.UiScale, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1"
                                IsSnapToTickEnabled="True" TickFrequency="0.05" />
                    </DockPanel>

                    <Border BorderBrush="#222326" BorderThickness="0,1,0,0" Margin="0,0,0,24" />

                    <DockPanel Margin="0,0,0,4">
                        <ToggleButton DockPanel.Dock="Right"
                                      IsChecked="{Binding Settings.GroupMessages, Mode=TwoWay}"
                                      Style="{StaticResource DarkToggleSwitch}" />
                        <StackPanel>
                            <TextBlock Text="Group Messages"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="14" FontWeight="SemiBold" />
                            <TextBlock Text="Consecutive messages from the same user are grouped together"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12" TextWrapping="Wrap" Margin="0,2,16,0" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:VoiceSettingsViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24,32,24">
                    <TextBlock Text="Voice" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,24" />

                    <!-- Input Mode -->
                    <TextBlock Text="INPUT MODE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <RadioButton Content="Voice Activity" Foreground="{StaticResource TextPrimaryBrush}"
                                     IsChecked="{Binding IsVoiceActivity, Mode=TwoWay}"
                                     Margin="0,0,16,0" FontSize="13" VerticalContentAlignment="Center" Cursor="Hand" />
                        <RadioButton Content="Push to Talk" Foreground="{StaticResource TextPrimaryBrush}"
                                     IsChecked="{Binding IsPushToTalk, Mode=TwoWay}"
                                     FontSize="13" VerticalContentAlignment="Center" Cursor="Hand" />
                    </StackPanel>

                    <!-- Input Sensitivity (Voice Activity mode) -->
                    <StackPanel Visibility="{Binding IsVoiceActivity, Converter={StaticResource BoolToVis}}"
                                Margin="0,0,0,8">
                        <TextBlock Text="INPUT SENSITIVITY" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                        <Slider Minimum="0" Maximum="1"
                                Value="{Binding Settings.VadSensitivity, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1" />
                    </StackPanel>

                    <!-- PTT Key (Push to Talk mode) -->
                    <StackPanel Visibility="{Binding IsPushToTalk, Converter={StaticResource BoolToVis}}"
                                Margin="0,0,0,8">
                        <TextBlock Text="PTT KEY" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                        <TextBlock Text="{Binding Settings.PttKey}"
                                   Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="PTT RELEASE DELAY" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock DockPanel.Dock="Right"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12" Width="50" TextAlignment="Right"
                                       VerticalAlignment="Center">
                                <Run Text="{Binding Settings.PttReleaseDelay, Mode=OneWay}" /><Run Text="ms" />
                            </TextBlock>
                            <Slider Minimum="0" Maximum="2000"
                                    Value="{Binding Settings.PttReleaseDelay, Mode=TwoWay}"
                                    SmallChange="50" LargeChange="200" />
                        </DockPanel>
                    </StackPanel>

                    <!-- Noise Suppression -->
                    <DockPanel Margin="0,8,0,16">
                        <ToggleButton DockPanel.Dock="Right"
                                      Style="{StaticResource DarkToggleSwitch}"
                                      IsChecked="{Binding Settings.NoiseSuppression, Mode=TwoWay}" />
                        <TextBlock Text="Noise Suppression" FontSize="13"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" />
                    </DockPanel>

                    <Border BorderBrush="#222326" BorderThickness="0,1,0,0" Margin="0,0,0,16" />

                    <TextBlock Text="MICROPHONE" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <ComboBox ItemsSource="{Binding InputDevices}"
                              SelectedItem="{Binding Settings.InputDevice, Mode=TwoWay}"
                              Style="{StaticResource DarkComboBox}"
                              Margin="0,0,0,8" />

                    <Button Content="{Binding MicTestButtonText}"
                            Command="{Binding TestMicCommand}"
                            Style="{StaticResource DarkButton}"
                            HorizontalAlignment="Left"
                            Padding="12,6" Margin="0,0,0,8" />
                    <Grid Margin="0,0,0,16"
                          Visibility="{Binding IsMicTesting, Converter={StaticResource BoolToVis}}">
                        <ProgressBar Height="6" Minimum="0" Maximum="1"
                                     Value="{Binding MicTestLevel, Mode=OneWay}"
                                     Background="#3A3C42"
                                     Foreground="{StaticResource AccentGreenBrush}"
                                     BorderThickness="0" />
                    </Grid>

                    <TextBlock Text="INPUT VOLUME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.InputVolume, Converter={StaticResource VolumeToPercent}}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0" Maximum="1"
                                Value="{Binding Settings.InputVolume, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1" />
                    </DockPanel>

                    <Border BorderBrush="#222326" BorderThickness="0,1,0,0" Margin="0,0,0,24" />

                    <TextBlock Text="SPEAKER" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding Settings.OutputDevice, Mode=TwoWay}"
                              Style="{StaticResource DarkComboBox}"
                              Margin="0,0,0,16" />

                    <TextBlock Text="OUTPUT VOLUME" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Text="{Binding Settings.OutputVolume, Converter={StaticResource VolumeToPercent}}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0" Maximum="1"
                                Value="{Binding Settings.OutputVolume, Mode=TwoWay}"
                                SmallChange="0.05" LargeChange="0.1" />
                    </DockPanel>

                    <Border BorderBrush="#222326" BorderThickness="0,1,0,0" Margin="0,0,0,24" />

                    <!-- Advanced: Opus Bitrate -->
                    <TextBlock Text="ADVANCED" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <TextBlock Text="Opus Bitrate" FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding BitrateOptions}"
                              SelectedItem="{Binding Settings.OpusBitrate, Mode=TwoWay}"
                              Style="{StaticResource DarkComboBox}"
                              Margin="0,0,0,16" />
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>

        <!-- Screen Share Settings -->
        <DataTemplate DataType="{x:Type vm:ScreenShareSettingsViewModel}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24,32,24">
                    <TextBlock Text="Screen Share" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,24" />

                    <TextBlock Text="DEFAULT QUALITY" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <ComboBox SelectedItem="{Binding Settings.DefaultStreamQuality, Mode=TwoWay}"
                              Style="{StaticResource DarkComboBox}"
                              Margin="0,0,0,16">
                        <ComboBox.Items>
                            <shared:StreamQuality>Low</shared:StreamQuality>
                            <shared:StreamQuality>Medium</shared:StreamQuality>
                            <shared:StreamQuality>High</shared:StreamQuality>
                        </ComboBox.Items>
                    </ComboBox>

                    <TextBlock Text="MAX FPS" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <DockPanel Margin="0,0,0,24">
                        <TextBlock DockPanel.Dock="Right"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12" Width="42" TextAlignment="Right"
                                   VerticalAlignment="Center">
                            <Run Text="{Binding Settings.MaxStreamFps, Mode=OneWay}" />
                        </TextBlock>
                        <Slider Minimum="5" Maximum="60"
                                Value="{Binding Settings.MaxStreamFps, Mode=TwoWay}"
                                SmallChange="5" LargeChange="10" />
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </Window.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <Border Grid.Row="0" Background="{StaticResource BgDarkestBrush}">
            <Grid>
                <!-- Centered icon + app name -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                            IsHitTestVisible="False">
                    <Image Source="pack://application:,,,/Assets/app.ico" Width="16" Height="16" Margin="0,0,6,0" />
                    <TextBlock Text="Chaos" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Window controls — all icons are drawn shapes so size and alignment are always consistent -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Minimize: horizontal line, same stroke as maximize square -->
                    <Button x:Name="MinimizeButton" Click="MinimizeButton_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Width="40" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <Line X1="0" Y1="0" X2="11" Y2="0"
                                          Stroke="{StaticResource TextSecondaryBrush}" StrokeThickness="1.5"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource BgLightBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Maximize: square outline -->
                    <Button x:Name="MaximizeButton" Click="MaximizeButton_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Width="40" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <Border x:Name="MaximizeIcon" Width="11" Height="11"
                                            BorderBrush="{StaticResource TextSecondaryBrush}"
                                            BorderThickness="1.5"
                                            HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource BgLightBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Close: X path, same stroke as maximize square -->
                    <Button x:Name="CloseButton" Click="CloseButton_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Width="40" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <Path x:Name="CloseIcon"
                                          Data="M0.75,0.75 L10.25,10.25 M10.25,0.75 L0.75,10.25"
                                          Stroke="{StaticResource TextSecondaryBrush}" StrokeThickness="1.5"
                                          StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentRedBrush}" />
                                        <Setter TargetName="CloseIcon" Property="Stroke" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">

        <!-- Login Overlay -->
        <Grid Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVis}}"
              Panel.ZIndex="10"
              Background="{StaticResource BgDarkBrush}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340"
                        KeyDown="LoginPanel_KeyDown"
                        FocusManager.FocusedElement="{Binding ElementName=UsernameInput}">
                <TextBlock Text="CHAOS"
                           FontSize="36" FontWeight="Bold"
                           Foreground="{StaticResource AccentBlueBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />
                <TextBlock Text="Self-hosted voice &amp; text chat"
                           FontSize="13"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" />

                <TextBlock Text="SERVER ADDRESS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6" />
                <TextBox Style="{StaticResource DarkTextBox}"
                         Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,16" />

                <TextBlock Text="USERNAME" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,6" />
                <TextBox x:Name="UsernameInput"
                         Style="{StaticResource DarkTextBox}"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20" />

                <Button Content="Connect"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding ConnectCommand}"
                        IsDefault="True"
                        FontSize="15" FontWeight="SemiBold"
                        Padding="0,10"
                        Margin="0,0,0,12" />

                <TextBlock Text="{Binding ConnectionStatus}"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           FontSize="12" />
            </StackPanel>
        </Grid>

        <!-- Modal Overlay -->
        <Grid Panel.ZIndex="20"
              Visibility="{Binding IsAnyModalOpen, Converter={StaticResource BoolToVis}}"
              Background="#A0000000"
              MouseLeftButtonDown="ModalBackdrop_MouseLeftButtonDown"
              PreviewKeyDown="ModalOverlay_PreviewKeyDown">
            <ContentControl x:Name="ModalContentControl"
                            Content="{Binding ActiveModal}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Margin="60"
                            MouseLeftButtonDown="Modal_MouseLeftButtonDown" />
        </Grid>

        <!-- Main Layout (visible when connected) -->
        <Grid Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="{Binding Settings.UiScale}" ScaleY="{Binding Settings.UiScale}" />
            </Grid.LayoutTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="160" MaxWidth="480" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Grid Grid.Column="0" Background="{StaticResource BgDarkBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="52" />
                </Grid.RowDefinitions>

                <!-- Server Name Header -->
                <Border Grid.Row="0" BorderBrush="#222326" BorderThickness="0,0,0,1"
                        Padding="16,0">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="+"
                                Style="{StaticResource DarkButton}"
                                Command="{Binding CreateChannelCommand}"
                                FontSize="18" FontWeight="Bold"
                                Padding="8,0" VerticalAlignment="Center"
                                ToolTip="Create Channel" />
                        <TextBlock Text="Chaos Server" FontSize="15" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" />
                    </DockPanel>
                </Border>

                <!-- Channel List with voice members inline -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Channels}" Margin="8,12,8,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="3,0,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActiveVoice}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentGreenBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                <StackPanel>
                                    <!-- Channel Button -->
                                    <Button HorizontalContentAlignment="Left"
                                            Padding="8,6" Margin="0,1"
                                            Cursor="Hand"
                                            Command="{Binding DataContext.ChannelClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Rename Channel"
                                                          Command="{Binding PlacementTarget.Tag.RenameChannelCommand,
                                                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                     RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                <MenuItem Header="Delete Channel"
                                                          Command="{Binding PlacementTarget.Tag.DeleteChannelCommand,
                                                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding PlacementTarget.DataContext,
                                                                                     RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                                                    CornerRadius="4" Background="{TemplateBinding Background}">
                                                                <ContentPresenter />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#404249" />
                                                                </DataTrigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#35373C" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="16" Margin="0,0,6,0"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActiveVoice}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActiveVoice}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <!-- Stream active indicator on channel -->
                                            <Border CornerRadius="3" Padding="4,1" Margin="6,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Background="{StaticResource AccentRedBrush}"
                                                    Visibility="{Binding HasActiveStream, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="LIVE" FontSize="8" FontWeight="Bold"
                                                           Foreground="White" />
                                            </Border>
                                        </StackPanel>
                                    </Button>

                                    <!-- Voice members shown under voice channels -->
                                    <ItemsControl ItemsSource="{Binding VoiceMembers}"
                                                  Margin="28,0,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0,2">
                                                    <StackPanel.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem StaysOpenOnClick="True">
                                                                <MenuItem.Template>
                                                                    <ControlTemplate TargetType="MenuItem">
                                                                        <Border Background="{StaticResource BgDarkBrush}" Padding="10,8">
                                                                            <StackPanel>
                                                                                <TextBlock Text="VOLUME"
                                                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                                                           FontSize="11" FontWeight="Bold"
                                                                                           Margin="0,0,0,6" />
                                                                                <DockPanel>
                                                                                    <TextBlock DockPanel.Dock="Right"
                                                                                               Text="{Binding PlacementTarget.DataContext.Volume,
                                                                                                              RelativeSource={RelativeSource AncestorType=ContextMenu},
                                                                                                              Converter={StaticResource VolumeToPercent}}"
                                                                                               Foreground="{StaticResource TextMutedBrush}"
                                                                                               FontSize="11" VerticalAlignment="Center"
                                                                                               MinWidth="34" TextAlignment="Right"
                                                                                               Margin="8,0,0,0" />
                                                                                    <Slider Minimum="0" Maximum="2"
                                                                                            Value="{Binding PlacementTarget.DataContext.Volume,
                                                                                                            RelativeSource={RelativeSource AncestorType=ContextMenu},
                                                                                                            Mode=TwoWay}"
                                                                                            Width="130"
                                                                                            SmallChange="0.05" LargeChange="0.2"
                                                                                            VerticalAlignment="Center" />
                                                                                </DockPanel>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </MenuItem.Template>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </StackPanel.ContextMenu>

                                                    <!-- Username row -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Speaking glow border around username -->
                                                        <Border CornerRadius="3" Padding="4,2" Margin="0,1">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="BorderThickness" Value="1.5" />
                                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSpeaking}" Value="True">
                                                                            <Setter Property="BorderBrush" Value="{StaticResource AccentGreenBrush}" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Username}" FontSize="13" VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsSpeaking}" Value="True">
                                                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                        <!-- Mute icon -->
                                                        <TextBlock Text="&#x1F507;" FontSize="11" VerticalAlignment="Center" Margin="4,0,0,0"
                                                                   ToolTip="Muted"
                                                                   Visibility="{Binding IsMuted, Converter={StaticResource BoolToVis}}" />
                                                        <!-- Deafen icon -->
                                                        <TextBlock Text="&#x1F508;" FontSize="11" VerticalAlignment="Center" Margin="2,0,0,0"
                                                                   ToolTip="Deafened"
                                                                   Visibility="{Binding IsDeafened, Converter={StaticResource BoolToVis}}" />
                                                        <!-- LIVE badge -->
                                                        <Border CornerRadius="3" Padding="5,1" Margin="6,0,0,0"
                                                                VerticalAlignment="Center"
                                                                Background="{StaticResource AccentRedBrush}"
                                                                Visibility="{Binding IsStreaming, Converter={StaticResource BoolToVis}}">
                                                            <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold"
                                                                       Foreground="White" />
                                                        </Border>
                                                    </StackPanel>

                                                    <!-- Watch Stream button (shown below streaming users) -->
                                                    <Button Margin="4,3,8,2"
                                                            Visibility="{Binding IsStreaming, Converter={StaticResource BoolToVis}}"
                                                            Command="{Binding DataContext.WatchStreamCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Cursor="Hand">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="WatchBorder" CornerRadius="4" Padding="8,4"
                                                                        Background="#2D2F34" BorderBrush="#3F4147" BorderThickness="1">
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                        <TextBlock Text="&#x1F4FA;" FontSize="11" VerticalAlignment="Center"
                                                                                   Margin="0,0,6,0" />
                                                                        <TextBlock Text="Watch Stream" FontSize="11"
                                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                                   VerticalAlignment="Center" />
                                                                    </StackPanel>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="WatchBorder" Property="Background" Value="#3A3D44" />
                                                                        <Setter TargetName="WatchBorder" Property="BorderBrush" Value="{StaticResource AccentBlueBrush}" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Voice Connection Bar (shown when in voice) -->
                <Border Grid.Row="2"
                        Visibility="{Binding IsInVoice, Converter={StaticResource BoolToVis}}"
                        Background="#1A1E1B" BorderBrush="#222326" BorderThickness="0,1,0,0"
                        Padding="12,8">
                    <StackPanel>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Content="X"
                                    Style="{StaticResource DarkButton}"
                                    Command="{Binding DisconnectVoiceCommand}"
                                    FontSize="11" Padding="6,2" FontWeight="Bold"
                                    VerticalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Signal quality bars -->
                                <StackPanel Orientation="Horizontal" Height="14" Margin="0,0,6,0"
                                            ToolTip="{Binding PingTooltip}">
                                    <Border Width="3" Height="4" CornerRadius="1,1,0,0"
                                            Background="{Binding Bar1}" Margin="0,0,1,0" VerticalAlignment="Bottom"/>
                                    <Border Width="3" Height="7" CornerRadius="1,1,0,0"
                                            Background="{Binding Bar2}" Margin="0,0,1,0" VerticalAlignment="Bottom"/>
                                    <Border Width="3" Height="10" CornerRadius="1,1,0,0"
                                            Background="{Binding Bar3}" Margin="0,0,1,0" VerticalAlignment="Bottom"/>
                                    <Border Width="3" Height="14" CornerRadius="1,1,0,0"
                                            Background="{Binding Bar4}" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="{Binding VoiceChannelName}"
                                               Foreground="{StaticResource AccentGreenBrush}"
                                               FontSize="12" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding VoiceStatus}"
                                               Foreground="{StaticResource AccentRedBrush}"
                                               FontSize="10" TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding VoiceStatus}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <ProgressBar Height="3" Margin="0,6,0,0"
                                     Minimum="0" Maximum="100"
                                     Value="{Binding MicLevel, Mode=OneWay}"
                                     Background="#3A3C42" Foreground="{StaticResource AccentGreenBrush}"
                                     BorderThickness="0" />

                        <!-- PTT Indicator (shown when push-to-talk mode) -->
                        <Border CornerRadius="3" Padding="6,3" Margin="0,6,0,0"
                                Visibility="{Binding IsPttMode, Converter={StaticResource BoolToVis}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#2D2F34" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPttActive}" Value="True">
                                            <Setter Property="Background" Value="#1A3A2A" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="PTT:" FontSize="10"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           VerticalAlignment="Center" Margin="0,0,4,0" />
                                <TextBlock Text="{Binding PttKeyDisplay}" FontSize="10" FontWeight="SemiBold"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPttActive}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Screen Share Button -->
                        <Button Content="{Binding ScreenShareButtonText}"
                                Command="{Binding ToggleScreenShareCommand}"
                                FontSize="11" Padding="0,5" Margin="0,6,0,0"
                                Cursor="Hand" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource AccentBlueBrush}" />
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsScreenSharing}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource AccentRedBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Watching Stream indicator -->
                        <Border CornerRadius="4" Padding="6,4" Margin="0,6,0,0"
                                Background="#2D2F34" BorderBrush="#3F4147" BorderThickness="1"
                                Visibility="{Binding IsWatchingStream, Converter={StaticResource BoolToVis}}">
                            <DockPanel>
                                <Button DockPanel.Dock="Right"
                                        Command="{Binding StopWatchingCommand}"
                                        Cursor="Hand" ToolTip="Stop watching">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="StopBd" CornerRadius="3" Padding="5,2"
                                                    Background="{StaticResource AccentRedBrush}">
                                                <TextBlock Text="X" FontSize="9" FontWeight="Bold"
                                                           Foreground="White" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="StopBd" Property="Background" Value="#FF5F62" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="&#x1F534;" FontSize="9" VerticalAlignment="Center"
                                               Margin="0,0,5,0" />
                                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" VerticalAlignment="Center">
                                        <Run Text="Watching" />
                                        <Run Text="{Binding WatchingStreamUsername, Mode=OneWay}"
                                             Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" />
                                    </TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- User Panel (bottom) -->
                <Border Grid.Row="3" Background="{StaticResource BgDarkestBrush}"
                        Padding="8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Username}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="13" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding ConnectionStatus}"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="10" />
                        </StackPanel>

                        <!-- Mute button (mic icon with red slash when muted) -->
                        <Button Grid.Column="1" Command="{Binding ToggleMuteCommand}"
                                ToolTip="{Binding MuteButtonText}"
                                Margin="4,0" VerticalAlignment="Center" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="MuteBorder" CornerRadius="4" Width="32" Height="32"
                                            Background="Transparent">
                                        <Grid>
                                            <TextBlock Text="&#x1F3A4;" FontSize="16"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            <!-- Red slash overlay when muted -->
                                            <Border x:Name="MuteSlash" Visibility="Collapsed"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="/" FontSize="22" FontWeight="Bold"
                                                           Foreground="{StaticResource AccentRedBrush}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           RenderTransformOrigin="0.5,0.5">
                                                    <TextBlock.RenderTransform>
                                                        <RotateTransform Angle="-45" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                            <Setter TargetName="MuteSlash" Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="MuteBorder" Property="Background" Value="#4E5058" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Deafen button (headphones icon with red slash when deafened) -->
                        <Button Grid.Column="2" Command="{Binding ToggleDeafenCommand}"
                                ToolTip="{Binding DeafenButtonText}"
                                VerticalAlignment="Center" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="DeafenBorder" CornerRadius="4" Width="32" Height="32"
                                            Background="Transparent">
                                        <Grid>
                                            <TextBlock Text="&#x1F3A7;" FontSize="16"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            <Border x:Name="DeafenSlash" Visibility="Collapsed"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="/" FontSize="22" FontWeight="Bold"
                                                           Foreground="{StaticResource AccentRedBrush}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           RenderTransformOrigin="0.5,0.5">
                                                    <TextBlock.RenderTransform>
                                                        <RotateTransform Angle="-45" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsDeafened}" Value="True">
                                            <Setter TargetName="DeafenSlash" Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="DeafenBorder" Property="Background" Value="#4E5058" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="3" Content="⚙"
                                Style="{StaticResource DarkButton}"
                                Command="{Binding OpenSettingsCommand}"
                                FontSize="13" Padding="6,4"
                                Margin="4,0,0,0" VerticalAlignment="Center"
                                ToolTip="Settings" />
                    </Grid>
                </Border>
            </Grid>

            <!-- Resize handle between sidebar and chat -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="#222326"
                          ShowsPreview="False" />

            <!-- Right: Text Chat Area (always shows selected text channel) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Channel Header -->
                <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}"
                        BorderBrush="#222326" BorderThickness="0,0,0,1"
                        Padding="16,0">
                    <TextBlock Text="{Binding ContentHeaderText}"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Content Area: Stream Viewer OR Messages (visibility-toggled) -->
                <Grid Grid.Row="1">
                    <!-- Stream Viewer (shown when watching inline - fills full height) -->
                    <Border Visibility="{Binding ShowInlineStream, Converter={StaticResource BoolToVis}}"
                            Background="{StaticResource BgDarkestBrush}">
                        <Grid>
                            <!-- Stream header bar -->
                            <DockPanel VerticalAlignment="Top" Background="#80000000"
                                       Panel.ZIndex="1" Margin="0">
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="8,4">
                                    <Button Content="&#x2197;" Style="{StaticResource DarkButton}"
                                            Command="{Binding PopOutStreamCommand}"
                                            FontSize="14" Padding="8,3" Margin="0,0,4,0"
                                            ToolTip="Pop out" />
                                    <Button Content="X" Style="{StaticResource DarkButton}"
                                            Command="{Binding StopWatchingCommand}"
                                            FontSize="11" Padding="8,3" FontWeight="Bold"
                                            Background="{StaticResource AccentRedBrush}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="10,4">
                                    <Border CornerRadius="3" Padding="5,1" Margin="0,0,6,0"
                                            Background="{StaticResource AccentRedBrush}" VerticalAlignment="Center">
                                        <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold"
                                                   Foreground="White" />
                                    </Border>
                                    <TextBlock Text="{Binding WatchingStreamUsername}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="13" FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </DockPanel>

                            <!-- Video frame -->
                            <Image Source="{Binding StreamFrame}"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="LowQuality" />

                            <!-- No frame yet -->
                            <TextBlock Text="Waiting for stream..."
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StreamFrame}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Messages (shown when NOT watching stream inline) -->
                    <Grid Background="{StaticResource BgMediumBrush}"
                          Visibility="{Binding ShowInlineStream, Converter={StaticResource InverseBoolToVis}}">
                    <ListBox Visibility="{Binding HasTextChannel, Converter={StaticResource BoolToVis}}"
                             ItemsSource="{Binding Messages}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             VirtualizingPanel.ScrollUnit="Pixel"
                             FontSize="{Binding Settings.FontSize}"
                             x:Name="MessageList">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="{Binding Padding}" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2E3035" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <StaticResource ResourceKey="MessageItemTemplate" />
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- No Channel Selected -->
                    <TextBlock Text="Select a text channel to start chatting"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding HasTextChannel, Converter={StaticResource InverseBoolToVis}}" />
                    </Grid>
                </Grid>

                <!-- Message Input (always visible at bottom) -->
                <Border Grid.Row="2" Padding="16,8,16,16"
                        Background="{StaticResource BgMediumBrush}"
                        Visibility="{Binding HasTextChannel, Converter={StaticResource BoolToVis}}"
                        AllowDrop="True"
                        PreviewDragOver="ChatInput_DragOver"
                        PreviewDrop="ChatInput_Drop">
                    <StackPanel>
                        <!-- Pending image thumbnail preview -->
                        <Border Background="{StaticResource BgInputBrush}"
                                CornerRadius="8" Padding="8"
                                Margin="0,0,0,6"
                                Visibility="{Binding HasPendingImage, Converter={StaticResource BoolToVis}}">
                            <DockPanel>
                                <Button DockPanel.Dock="Right"
                                        Content="✕"
                                        Style="{StaticResource DarkButton}"
                                        Command="{Binding ClearPendingImageCommand}"
                                        Padding="6,4" Margin="8,0,0,0"
                                        VerticalAlignment="Top" />
                                <Image Source="{Binding PendingImagePreview}"
                                       MaxWidth="300" MaxHeight="120"
                                       Stretch="Uniform" HorizontalAlignment="Left" />
                            </DockPanel>
                        </Border>

                        <!-- Slash Command Autocomplete -->
                        <Border CornerRadius="8" Margin="0,0,0,4"
                                Background="{StaticResource BgDarkBrush}"
                                BorderBrush="#40FFFFFF" BorderThickness="1"
                                Visibility="{Binding ShowSlashSuggestions, Converter={StaticResource BoolToVis}}">
                            <ListBox x:Name="SuggestionList"
                                     ItemsSource="{Binding SlashSuggestions}"
                                     SelectedIndex="{Binding SelectedSuggestionIndex, Mode=TwoWay}"
                                     Focusable="False"
                                     MaxHeight="200"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     PreviewMouseLeftButtonDown="SuggestionList_PreviewMouseLeftButtonDown">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Focusable" Value="False" />
                                        <Setter Property="Padding" Value="12,6" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                        <ContentPresenter />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#35373C" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#4752C4" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Foreground="{StaticResource AccentBlueBrush}"
                                                       FontWeight="SemiBold" FontSize="14"
                                                       VerticalAlignment="Center">
                                                <Run Text="/" /><Run Text="{Binding Name, Mode=OneWay}" />
                                            </TextBlock>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       FontSize="13" Margin="12,0,0,0"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Usage}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" Margin="12,0,0,0"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Text input row -->
                        <Border Background="{StaticResource BgInputBrush}"
                                CornerRadius="8"
                                Padding="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Style="{StaticResource DarkTextBox}"
                                         Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"
                                         x:Name="MessageInput"
                                         PreviewKeyDown="MessageInput_PreviewKeyDown" />
                                <Button Grid.Column="1"
                                        Content="Send"
                                        Style="{StaticResource AccentButton}"
                                        Command="{Binding SendMessageCommand}"
                                        IsDefault="True"
                                        Padding="16,6"
                                        Margin="4,0,0,0"
                                        VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        </Grid> <!-- /Content -->
    </Grid>
</Window>

<Window x:Class="Chaos.Client.StreamViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stream Viewer" Height="540" Width="960"
        Background="#1E1F22"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border x:Name="TopBar" Grid.Row="0" Background="#2B2D31" Padding="10,0" Height="36">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Content="&#x2199;" Click="PopInBtn_Click"
                            Background="#383A40" Foreground="#F2F3F5"
                            BorderThickness="0" Padding="10,4" Margin="4,4"
                            Cursor="Hand" FontSize="14" ToolTip="Pop in" />
                    <Button x:Name="FullscreenBtn" Content="&#x26F6;" Click="FullscreenBtn_Click"
                            Background="#383A40" Foreground="#F2F3F5"
                            BorderThickness="0" Padding="10,4" Margin="4,4"
                            Cursor="Hand" FontSize="14" ToolTip="Fullscreen" />
                    <Button x:Name="PinBtn" Content="&#x1F4CC;" Click="PinBtn_Click"
                            Background="#383A40" Foreground="#F2F3F5"
                            BorderThickness="0" Padding="10,4" Margin="4,4"
                            Cursor="Hand" FontSize="14" ToolTip="Pin on top" />
                    <Button Content="X" Click="CloseBtn_Click"
                            Background="#ED4245" Foreground="#F2F3F5"
                            BorderThickness="0" Padding="10,4" Margin="4,4"
                            Cursor="Hand" FontSize="12" FontWeight="Bold" />
                </StackPanel>
                <TextBlock x:Name="StreamerName" Text="Stream"
                           Foreground="#F2F3F5" FontSize="13" FontWeight="SemiBold"
                           VerticalAlignment="Center" />
            </DockPanel>
        </Border>

        <!-- Video frame (double-click to fullscreen) -->
        <Image Grid.Row="1" x:Name="VideoFrame"
               Stretch="Uniform" RenderOptions.BitmapScalingMode="LowQuality" />

        <!-- No stream overlay -->
        <TextBlock Grid.Row="1" x:Name="NoStreamText"
                   Text="Waiting for stream..."
                   Foreground="#6D6F78" FontSize="16"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Visibility="Visible" />
    </Grid>
</Window>
